{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2022",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "**/*.test.ts"]
}